{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="content-container">
		<h1 class="mg-top-xl mg-bottom-xl">Connexion</h1>
		<div class="form-container">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Vous êtes connecté en tant que
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Déconnexion</a>
					</div>
				{% endif %}
				<div class="row">
					<label for="inputUsername">Username</label>
				</div>
				<div class="row">
					<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control width-80" autocomplete="username" required autofocus>
				</div>
				<div class="row">
					<label for="inputPassword">Mot de passe</label>
				</div>
				<div class="row">
					<input type="password" name="password" id="inputPassword" class="form-control width-80" autocomplete="current-password" required>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
										See https://symfony.com/doc/current/security/remember_me.html #}
				<div class="checkbox mb-3">
					<label>
						<input type="checkbox" name="_remember_me">
						Se souvenir de moi
					</label>
				</div>


				<button class="btn" type="submit">
					Connexion
				</button>
			</form>

			<div class="row">
				<a href="{{ path('app_forgot_password_request')}}">Mot de passe oublié</a>
			</div>
		</div>
	</div>
{% endblock %}
