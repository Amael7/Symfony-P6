{% extends 'base.html.twig' %}

{% block title %}SnowTricks
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">

		<h1>Figures</h1>

		<ul>
			{% for figure in figures %}
				<li>
					<h2><a href="/figures/{{ figure.id }}/{{ figure.slug }}">{{ figure.name }}</a></h2>
					<p>{{ figure.description }}</p>
					<p>Type:
						{{ figure.type.title }}</p>
					<p>Auteur:
						{{ figure.user.firstName }}</p>
				</li>
			{% endfor %}
		</ul>
		<section class="figures"></section>
	</div>
{% endblock %}
