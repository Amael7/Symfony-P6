{% extends 'base.html.twig' %}

{% block title %} Modifier mon profil
{% endblock %}

{% block body %}
	<div class="content-container">
		{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}

		<h1 class="mg-top-xl mg-bottom-xl">Editer Profil</h1>
		<div class="form-container">
			{{ form_start(userForm) }}
				<div class="row form-fig-name">
					{{ form_row(userForm.email)}}
				</div>
				<div class="row form-fig-name">
					{{ form_row(userForm.username)}}
				</div>
				<div class="row form-fig-name">
					{{ form_row(userForm.firstname)}}
				</div>
				<div class="row form-fig-name">
					{{ form_row(userForm.lastname)}}
				</div>
				<div class="row form-fig-name">
					{{ form_row(userForm.photo)}}
				</div>
				<div class="row mg-top-l">
					<button type="submit" class="btn green-success">Editer</button>
				</div>
			{{ form_end(userForm) }}
		</div>
	</div>
{% endblock %}
