{% extends 'base.html.twig' %}

{% block title %}Renouvellez votre mot de passe{% endblock %}

{% block body %}
  <div class="content-container">
    <h1 class="mg-top-xl mg-bottom-xl">Renouvellez votre mot de passe</h1>
    <div class="form-container">
      {{ form_start(resetForm) }}

      <div class="row">
        {{ form_label(resetForm.plainPassword.first, 'Mot de passe') }}
      </div>
      <div class="row">
        {{ form_widget(resetForm.plainPassword.first, {'attr': {'placeholder': 'Mot de passe', 'class': 'form-control width-80'}}) }}
      </div>
      <div class="row">
        {{ form_label(resetForm.plainPassword.second, 'Repetez mot de passe') }}
      </div>
      <div class="row">
        {{ form_widget(resetForm.plainPassword.second, {'attr': {'placeholder': 'Repetez mot de passe', 'class': 'form-control width-80'}}) }}
      </div>
      <div class="row mg-top-l">
        <button class="btn green-success">Renouvellez le mot de passe</button>
      </div>
      {{ form_end(resetForm) }}
		</div>
	</div>
{% endblock %}
